{
  "name": "@trademe/defer-load",
  "version": "0.0.0-alpha-1",
  "description": "Angular directive to load elements lazily",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "lint": "npm run lint:src",
