  "author": "Vamsi Vempati",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^5.2.9",
    "@angular/core": "^5.2.9"
  },
  "devDependencies": {
    "rxjs": "^5.5.7",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1"
  }
}
